<% include partials/header.ejs %> <% include partials/nav.ejs %>

<section class="container my-5">
  <h1><%= title %></h1>

  <div class="alert alert-success" role="alert">
    Reach out to me through the contact form below <strong>Fastest</strong>
  </div>

  <div class="alert alert-warning" role="alert">
    Email me through my email address
    <a href="mailto:sakter30@my.centennialcollege.com"
      >sakter30ATmycentennialcollegeDOTcom</a
    >
    <i>Slower</i>
  </div>

  <form
    action="/contact"
    id="contact-form"
    method="post"
    role="form"
    class="needs-validation"
    novalidate
  >
    <fieldset>
      <div class="mb-3">
        <label for="firstName" class="form-label">First Name</label>
        <input
          type="text"
          class="form-control"
          id="firstName"
          name="firstName"
          placeholder="Your first name"
          autofocus
          required
        />
        <div class="invalid-feedback">Please enter your first name</div>
      </div>
      <div class="mb-3">
        <label for="lastName" class="form-label">Last Name</label>
        <input
          type="text"
          class="form-control"
          id="lastName"
          name="lastName"
          placeholder="Your last name"
          required
        />
        <div class="invalid-feedback">Please enter your last name</div>
      </div>
      <div class="mb-3">
        <label for="phone" class="form-label">Phone Number</label>
        <input
          type="tel"
          class="form-control"
          id="phone"
          name="phone"
          placeholder="5551234569"
          required
        />
        <div class="invalid-feedback">
          Please enter your number, how can i contant you?
        </div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          placeholder="name@example.com"
          required
        />
        <div class="invalid-feedback">
          Please enter your email, how can i contant you?
        </div>
      </div>
      <div class="mb-3">
        <label for="message" class="form-label">Example textarea</label>
        <textarea
          class="form-control"
          id="message"
          name="message"
          placeholder="Enter your message here"
          rows="3"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter your message</div>
      </div>

      <button class="btn btn-outline-primary" type="submit">Submit</button>
    </fieldset>
  </form>
</section>

<% include partials/footer.ejs %>
